<script>
    function login() {
        var username = $('#username').val();
        var password = $('#password').val();
        // var remember = $('#customCheck').is(":checked");

        var myHeaders = new Headers();
        myHeaders.append("Content-Type", "application/json");
        myHeaders.append("Cookie",
            "connect.sid=s%3Ag6_mc34cCOsVz-lvYd6IW8uIgYdCCeYu.tNiG3ILryrekfZMu5k4Exhu9AOBzu6ztR6cm%2FShmWnE");

        var raw = JSON.stringify({
            "username": username,
            "password": password
        });

        var requestOptions = {
            method: 'POST',
            headers: myHeaders,
            body: raw,
            redirect: 'follow'
        };

        fetch("/api/login", requestOptions).then(resp => {
            if (resp.status == 200) {
                alert('Đăng nhập thành công!')
                window.location.href = "/home";
            } else {
                alert("Vui lòng kiểm tra lại thông tin!");
            }
        })
    }
</script>